<Page x:Class="BPR2_Desktop.Views.Pages.MicroManagement.ProductViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:BPR2_Desktop.Views.Pages.MicroManagement"
      d:DataContext="{d:DesignInstance local:ProductViewer, IsDesignTimeCreatable=False}"
      xmlns:micromanagement="clr-namespace:BPR2_Desktop.Views.Components.MicroManagement"
      mc:Ignorable="d"
      Title="Layout Designer" Height="Auto" Width="auto"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Grid Name="MainGrid" Margin="0,0,0,24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="20">
            <micromanagement:ShelfPanel Width="Auto" Height="Auto" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
