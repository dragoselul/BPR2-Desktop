<ui:FluentWindow x:Class="BPR2_Desktop.Views.Windows.SetDimensions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="SetDimensions" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ui:TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" 
                   Margin="10" FontWeight="Bold" 
                   Text="Set Store Dimensions" HorizontalAlignment="Center" VerticalAlignment="Center" />
        
        <!-- ComboBox for Shape Selection -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <ui:TextBlock Text="Select Shape: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="ShapeComboBox" Width="150" VerticalAlignment="Center" SelectionChanged="ShapeComboBox_SelectionChanged">
                <ComboBoxItem Content="Square" />
                <ComboBoxItem Content="Complicated Shape" />
            </ComboBox>
        </StackPanel>
        <!-- Form Layout Grid for Square Dimensions -->
        <Grid x:Name="SquareDimensionsGrid" Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55" />
                <RowDefinition Height="55" />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>
            <ui:TextBlock Grid.Row="0" Grid.Column="0" Text="Width" Height="Auto" Margin="10" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <ui:TextBox x:Name="WidthTextBox" Grid.Row="0" Grid.Column="1" Margin="10" Width="250" />
            <ui:TextBlock Grid.Row="1" Grid.Column="0" Text="Length" Height="Auto" Margin="10" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <ui:TextBox x:Name="LengthTextBox" Grid.Row="1" Grid.Column="1" Margin="10" />
            <ui:TextBlock Grid.Row="2" Grid.Column="0" Text="Height" Height="Auto" Margin="10" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <ui:TextBox x:Name="HeightTextBox" Grid.Row="2" Grid.Column="1" Height="Auto" Margin="10" />
        </Grid>
        
        <!-- Input box for Complicated Shape (Wall Length) -->
        <Grid x:Name="ComplicatedShapeGrid" Grid.Row="2" Grid.Column="0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <ui:TextBlock Grid.Row="0" Grid.Column="0" Text="Wall Length" Margin="10" 
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <ui:TextBox x:Name="WallLengthTextBox" Grid.Row="0" Grid.Column="1" Margin="10" Width="250"/>
        </Grid>
        
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <ui:Button Appearance="Success" Content="Save"  Margin="10" Height="40" Width="60" Click="Save_Click" />
            <ui:Button Appearance="Danger" Content="Cancel" Padding="10" Margin="10" Height="40" Width="70" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
