<UserControl x:Class="BPR2_Desktop.Views.Components.MicroManagement.ShelfPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BPR2_Desktop.Views.Components.MicroManagement"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="0" Background="Transparent">
            <Canvas Width="Auto" Height="Auto" Background="#FFFACD">
                <Canvas.LayoutTransform>
                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                </Canvas.LayoutTransform>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
