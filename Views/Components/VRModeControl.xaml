<UserControl x:Class="BPR2_Desktop.Views.Components.VRModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Height="50" Width="150">
    <StackPanel Orientation="Horizontal">
        <ui:TextBlock Text="VR Mode" VerticalAlignment="Center" Margin="10,0"/>
        <ui:ToggleSwitch Name="VRModeToggle" Width="100" Height="25" Background="Red" IsChecked="False" Click="ToggleVRMode" OffContent="Off"
                         OnContent="On"/>
    </StackPanel>
</UserControl>