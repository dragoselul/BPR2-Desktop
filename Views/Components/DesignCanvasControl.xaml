             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Border BorderBrush="Gray" BorderThickness="1" Background="White">
        <Canvas Width="400" Height="300" Background="#FFFACD">
            <!-- Example element in canvas -->
            <Rectangle Width="100" Height="100" Fill="#FFFACD" Stroke="Orange" StrokeThickness="1" Canvas.Left="100" Canvas.Top="100"/>
        </Canvas>
    </Border>
</UserControl>
