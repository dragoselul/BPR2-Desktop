<UserControl x:Class="BPR2_Desktop.Components.VRModeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="150">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="VR Mode" VerticalAlignment="Center" Margin="10,0"/>
        <ToggleButton Name="VRModeToggle" Width="50" Height="25" Background="Red" IsChecked="False" Click="ToggleVRMode">
            <TextBlock Name="ToggleText" Text="OFF" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </ToggleButton>
    </StackPanel>
</UserControl>

